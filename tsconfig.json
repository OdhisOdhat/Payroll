{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Recommended strictness additions (optional but very helpful)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "index.html"   // so Vite can process it with TS awareness if needed
  ],
  "exclude": [
    "node_modules",
    "src/dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "vite.config.ts",
    "vite.config.js"
  ]
}